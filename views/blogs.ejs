<%- include("partials/header.ejs") %>

<% if (posts.length > 0 ) { %>


   <ul>
    <% posts.forEach(post =>  {%>
      <li> 
         <h2> <%= post.title %> </h2>
         <p><%= post.content %></p>
      </li>
      
      <form action="/blogs/<%= post.id %>/delete " method="post">
         <button type="submit">delete</button>
      </form>

   <% }); %>     
   </ul>

  <% } else { %>
 
<p>No blogs yet.</p>
   <% } %>


   

